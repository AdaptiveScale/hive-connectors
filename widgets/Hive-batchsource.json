{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Hive",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "select",
          "label": "Authentication",
          "name": "authentication",
          "widget-attributes": {
            "values": [
              "None",
              "Kerberos",
              "LDAP"
            ],
            "default": "None"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "userName"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "URL",
          "name": "url",
          "widget-attributes": {
            "placeholder": "jdbc:hive2://<hostname>:<port>"
          }
        },
        {
          "widget-type": "text",
          "label": "JDBC Driver",
          "name": "jdbcDriver"
        },
        {
          "widget-type": "text",
          "label": "Metastore URL",
          "name": "metastoreUrl"
        },
        {
          "widget-type": "text",
          "label": "Metastore Driver",
          "name": "metastoreDriver"
        },
        {
          "widget-type": "textbox",
          "label": "Metastore Username",
          "name": "metastoreUsername"
        },
        {
          "widget-type": "password",
          "label": "Metastore Password",
          "name": "metastorePassword"
        },
        {
          "widget-type": "text",
          "label": "Principal Name",
          "name": "principalName"
        },
        {
          "widget-type": "text",
          "label": "ImpersonationName",
          "name": "impersonationName"
        },
        {
          "widget-type": "text",
          "label": "Keytab file",
          "name": "keytabFile"
        },
        {
          "widget-type": "text",
          "label": "Namenode URL",
          "name": "nameNodeUrl"
        },
        {
          "widget-type": "select",
          "label": "Staging Type",
          "name": "stagingType",
          "widget-attributes": {
            "values": [
              "HDFS",
              "Hive Database"
            ]
          }
        },
        {
          "widget-type": "text",
          "label": "Staging Location",
          "name": "stagingLocation"
        }
      ]
    }
  ]
}
